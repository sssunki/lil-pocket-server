<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.lilpocket.DAO.ConnectedMapDAO">

    <select id="getConnectedUserFromChild" parameterType="String"
            resultType="com.example.lilpocket.Bean.ConnectedMap">
        select
        *
        from connected_user
        where childAccount = #{childAccount}
    </select>

    <select id="getConnectedUserFromParent" parameterType="String"
            resultType="com.example.lilpocket.Bean.ConnectedMap">
        select
        *
        from connected_user
        where parentAccount = #{parentAccount}
    </select>

</mapper>